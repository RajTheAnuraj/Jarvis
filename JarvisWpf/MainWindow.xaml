<Window x:Class="JarvisWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:App="clr-namespace:JarvisWpf"
        xmlns:Project="clr-namespace:JarvisWpf.Project"
        Title="MainWindow" Height="900" Width="1000">
    <Window.DataContext>
        <App:ApplicationViewModel></App:ApplicationViewModel>
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate DataType="{x:Type Project:ProjectListViewModel}">
            <Project:ProjectListView></Project:ProjectListView>
        </DataTemplate>
        <DataTemplate DataType="{x:Type Project:ProjectViewModel}">
            <Project:ProjectView></Project:ProjectView>
        </DataTemplate>
    </Window.Resources>
    <Grid>
    	
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Background="#FF0D4BFD">
            <TextBlock Foreground="White" FontSize="32" HorizontalAlignment="Center" FontFamily="Chiller">Jarvis</TextBlock>
        </StackPanel>
        <ContentControl Content="{Binding CurrentViewModel}" Grid.Row="1" Margin="0,10,0,0"></ContentControl>
    </Grid>
</Window>
